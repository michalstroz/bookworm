<%= form_for [@book,@review], :html => { :class => "form-horizontal review" } do |f| %>

  <% if @review.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@review.errors.count, "error") %> prohibited this review from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @review.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <%=f.error_span(:name) %>
  </div>
  <div class="form-group">
    <%= f.label :contents, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :contents, :class => 'form-control' %>
    </div>
    <%=f.error_span(:contents) %>
  </div>
  <div class="form-group">
    <%= f.label :book_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :book_id, :class => 'form-control' %>
    </div>
    <%=f.error_span(:book_id) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                reviews_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
